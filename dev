#!/bin/bash --login

cd ~/development/etc/busyverse

tmux new \; \
  rename-window 'server' \; \
  new-window -n 'vim' -d 'vim .' \; \
  new-window -n 'konacha' \; \
  send-keys -t 'server' 'bundle exec rails server' Enter \; \
  send-keys -t 'konacha' 'bundle exec rake konacha:serve' Enter \; \
  attach \;
